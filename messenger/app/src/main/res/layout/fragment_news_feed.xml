<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="?android:attr/colorBackground"
    tools:context=".NewsFeedFragment">

    <TextView
        android:id="@+id/tv_feed_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="@string/title_news_feed"

        android:textSize="25sp"
        android:textStyle="bold"

        android:fontFamily="@font/cygre_semibold"

        android:textColor="?attr/colorOnBackground"

        android:paddingStart="17dp"
        android:paddingEnd="0dp"
        android:paddingTop="33dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_feed_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/placeholder_empty"

        android:textSize="20sp"

        android:fontFamily="@font/cygre_book"

        android:textColor="@color/dark_grey"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>