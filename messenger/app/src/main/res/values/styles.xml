<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">@font/cygre_book</item>
        <item name="android:layout_marginStart">23dp</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>

        <item name="android:background">@drawable/edit_text_background</item>

        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">@font/cygre_book</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">23dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>